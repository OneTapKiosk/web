{
  "name": "cookiosk-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "yarn build:electron && electron .",
    "dev": "concurrently \"yarn dev:react\" \"yarn dev:electron\"",
    "build:react": "tsc -p client/tsconfig.app.json && vite build",
    "build:electron": "tsc --project electron/tsconfig.electron.json",
    "build": "concurrently \"yarn build:react\" \"yarn build:electron\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "concurrently \"yarn dev\" \"yarn electron:dev\""
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/remote": "^2.1.3",
    "@tanstack/react-query": "^5.83.0",
    "@types/node": "^24.1.0",
    "axios": "^1.11.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
    "path": "^0.12.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.1",
    "url": "^0.11.4",
    "vite-tsconfig-paths": "^5.1.4",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@pandacss/dev": "^0.54.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.6"
  },
  "build": {
    "appId": "com.cookiosk.web",
    "productName": "CookioskWeb",
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/icon.png"
    }
  },
  "main": "dist-electron/main.js"
}
